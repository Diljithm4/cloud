<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cloud"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cloud"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".image_custom"></activity>
        <activity android:name=".image_view" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".upload_file" />
        <activity
            android:name=".cloud_home_new"
            android:label="@string/title_activity_cloud_home_new"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".applist" />
        <activity android:name=".forgot_password" />
        <activity android:name=".registration" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>